<div>
	<h3>Распродажа книг</h3>
	<table>
		<tr>
			<td><p>Название книги</p></td>
			<td><p>Автор</p></td>
			<td><p>Цена</p></td>
			<td></td>
		</tr>
		@foreach (var b in ViewBag.Books)
		{
			<tr>
				<td><p>@b.Name</p></td>
				<td><p>@b.Author</p></td>
				<td><p>@b.Price</p></td>
				<td><p>@Html.ActionLink("Купить", "Buy", new { id = b.Id })</p></td>
			</tr>
		}
	</table>
</div>
@Html.Partial("_Partial")
@{Html.RenderPartial("_Countries", new string[] { "Russia", "USA", "Canada", "France" });}
@section Footer {
	Все права защищены. Syte Corp. 2012.
}